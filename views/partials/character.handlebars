{{!-- Pull proper tags for characters --}}
<div class="card">
  <div class="card-image">
    <figure class="image is-4by3">
      <img src="{{character.image}}" alt="{{character.description}}">
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <p class="title is-4">{{character.name}}</p>
        <p class="subtitle is-6">{{character.description}}</p>
      </div>
    </div>
    <div class="content">
      <ul>
        <li>Damage: {{character.damage}}</li>
        {{!-- <li>Strong Attack: {{character.strong}}</li>
        <li>Wisdom Attack: {{character.wisdom}}</li> --}}
      </ul>
    </div>
  </div>
</div>