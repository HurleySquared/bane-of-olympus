<div class="columns">
  <div class="column is-4 is-offset-2">
    <div class="box">
      <form class="form login-form">
        <h3 class="log-header">Login</h3>
        <div class="form-group">
          <label for="email-login">email:</label>
          <div class="control">
            <input class="form-input" type="text" id="email-login" />
          </div>
        </div>
        <div class="form-group">
          <label for="password-login">password:</label>
          <div class="control">
            <input class="form-input" type="password" id="password-login" />
          </div>
        </div>
        <div class="form-group">
          <button class="btn btn-primary log-btn" type="submit">login</button>
        </div>
      </form>
    </div>
  </div>

  <div class="column is-4">
    <div class="box">
      <form class="form signup-form">
        <h3 class="log-header">Signup</h3>
        <div class="form-group">
          <label for="name-signup">name:</label>
          <div class="control">
            <input class="form-input" type="text" id="username-signup" />
          </div>
        </div>
        <div class="form-group">
          <label for="email-signup">email:</label>
          <div class="control">
            <input class="form-input" type="text" id="email-signup" />
          </div>
        </div>
        <div class="form-group">
          <label for="password-signup">password:</label>
          <div class="control">
            <input class="form-input" type="password" id="password-signup" />
          </div>
        </div>
        <div class="form-group">
          <button class="btn btn-primary log-btn" type="submit">signup</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>